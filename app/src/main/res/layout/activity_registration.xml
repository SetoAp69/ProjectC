<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RegistrationActivity"
    android:orientation="vertical"
    android:background="#CEFCFF">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/registration"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="45dp"
        android:layout_gravity="center"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create Username"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:paddingVertical="15dp"
        android:background="@drawable/edit_text_background"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your email"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:paddingVertical="15dp"
        android:background="@drawable/edit_text_background"


        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Create password"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:paddingVertical="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/outline_visibility_24"
        android:paddingEnd="20dp"



        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Re enter the password"
        android:textSize="12dp"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="25dp"
        android:paddingLeft="17dp"
        android:paddingVertical="15dp"
        android:background="@drawable/edit_text_background"
        android:drawableEnd="@drawable/outline_visibility_24"
        android:paddingEnd="20dp"




        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Create Account"
        android:fontFamily="@font/poppins_bold"
        android:layout_marginTop="39dp"
        android:layout_marginHorizontal="25dp"
        android:textSize="14dp"
        android:backgroundTint="#0E64D2"
        android:textColor="@color/white"
        android:background="@drawable/registration_button"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account? "
        android:fontFamily="@font/poppins_regular"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        android:text="Login"
        android:fontFamily="@font/poppins_regular"
        android:layout_gravity="center"
        android:textColor="#2F89FC"
        />



</LinearLayout>